<Application x:Class="SolidWorksSketchViewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SolidWorksSketchViewer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Import fonts -->
        <FontFamily x:Key="ModernFont">Segoe UI, Arial</FontFamily>

        <!-- Common Effects -->
        <DropShadowEffect x:Key="SoftShadowEffect" 
                      ShadowDepth="3" 
                      Direction="315" 
                      Opacity="0.2" 
                      BlurRadius="10" 
                      Color="#000000"/>

        <!-- Application-wide text styles -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource ModernFont}"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="{StaticResource ModernFont}"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource ModernFont}"/>
        </Style>
    </Application.Resources>
</Application>